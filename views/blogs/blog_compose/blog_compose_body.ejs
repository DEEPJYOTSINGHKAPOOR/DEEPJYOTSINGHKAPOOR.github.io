<section class="compose-blog-section">
    <div class="container">
        <form method="POST" id="compose-form">
            <div class="form-group ">
                <label for="blogTitle">Enter Title</label>
                <input type="text" class="form-control" name="blogTitle" id="blogTitle" placeholder="Enter title">
                <small class="form-text text-muted">Write Blog Topic</small>
            </div>
            <label for="blogContent1">Blog Content</label>
            <div class="form-group">
                <textarea class="form-group" id="blogContent1" oninput="auto_grow(this)"
                    placeholder="Start writing some tech blogs...">
                </textarea>
            </div>
            <div class="form-group">
                <label for="blogPassword">Password</label>
                <input type="password" class="form-control" id="blogPassword" placeholder="Password">
            </div>
            <button type="button" id="submit1" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>